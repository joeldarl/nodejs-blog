extends ../layout

block content
    body
        form(action="/admin/posts/update/"+post.id method="POST")
            p Title:
                input(type="text" name="title" value= post.title)
            br
            p Content:
            textarea(id="markdown" name="body")
            input(type="submit")
    script.
        window.addEventListener('load', function () {
            simplemde.value(`#{post.body}`);
        });