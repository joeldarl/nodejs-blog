extends ../layout

block content
    a(class="create-btn" href='/admin/pages/create') Create Page
    if (pages.length)
        div(class="table items")
            div(class="row")
                div="Title"
                div="Url"
                div="Edit"
                div="Delete"
            div(class="table-contents")
                    each page in pages
                        div(class="item row")
                            div
                                h2=page.title
                            div
                                h2=page.url
                            div
                                a(href="pages/edit/" + page.id) Edit
                            div
                                a(href="pages/delete/" + page.id) Delete