extends ../layout

block content
    if (pages.length)
        div(class="table items")
            div(class="row")
                div.list-width-50="Title"
                div.list-width-50="Url"
                div="Edit"
                div="Delete"
            div(class="table-contents")
                    each page in pages
                        div(class="item row")
                            div.list-width-50
                                h2=page.title
                            div.list-width-50
                                h2=page.url
                            div
                                a(href="pages/edit/" + page.id) Edit
                            div
                                a(href="pages/delete/" + page.id)
                                    img(src="/images/icon-trash.svg")
    else
        h2 No pages available.
    a(class="btn btn-invert create-btn" href='/admin/pages/create') Create Page